@model IEnumerable<Projet2020.Models.Comments>

@{
    ViewBag.Title = "Index";
}

<h2>Comments area</h2>
@if (Session["id"] != null)
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Id_prod)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Comment)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id_prod)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Comment)
            </td>
            @if (Session["id"] != null && int.Parse(Session["id"].ToString()) == 1)
            {
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id_com }) |
                    @Html.ActionLink("Details", "Details", new { id = item.Id_com }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id_com })
                </td>
            }

        </tr>
    }

</table>
