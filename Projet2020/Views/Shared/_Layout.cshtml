<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="https://use.fontawesome.com/418b9f4230.js"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css" integrity="sha384-TX8t27EcRE3e/ihU7zmQxVncDAy5uIKz4rEkgIXeMed4M0jlfIDPvg6uqKI2xXr2" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx" crossorigin="anonymous"></script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.min.js" integrity="sha384-w1Q4orYjBQndcko6MimVbzY0tgp4pWB4lZ7lr30WKz0vr/aWKhXdBNmNb5D92v7s" crossorigin="anonymous"></script>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
    <title>@ViewBag.Title - Guishop</title>
    <link rel="icon" href="~/Images/judo.ico" />
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="container-fluid">
        <img class="banniere" src="~/Images/Guishop 2.0.png" alt="Ban" />
    </div>
    @if (Session["id"] == null)
    {
<div class="container-fluid">
    <nav class="navbar navbar-expand-lg navbar-light bg-success container-fluid">
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
            <ul class="navbar-nav mr-auto">
                <li>@Html.ActionLink("Guishop", "Index", "Home", new { area = "" }, new { @class = "nav-link font-weight-bold" })</li>
                <li>@Html.ActionLink("Products", "index", "Produits", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</li>
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</li>
                <li class="dropdown font-weight-bold ml-3">
                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        client zone
                    </a>
                    <div class="dropdown-menu bg-success font-weight-bold" aria-labelledby="navbarDropdown">
                        <a>@Html.ActionLink("Login", "login", "Clients", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</a>
                        <a>@Html.ActionLink("Inscription", "Create", "Clients", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</a>
                    </div>
                </li>
            </ul>
        </div>
    </nav>
</div> }
else
{
<div class="container-fluid pt-3 pb-4">
</div>
                <div class="container-fluid">
                    <nav class="navbar navbar-expand-lg navbar-light bg-success container-fluid">
                        <div class="collapse navbar-collapse" id="navbarSupportedContent">
                            <ul class="navbar-nav mr-auto">
                                <li>@Html.ActionLink("Guishop", "Index", "Home", new { area = "" }, new { @class = "nav-link font-weight-bold" })</li>
                                <li>@Html.ActionLink("Products", "index", "Produits", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</li>
                                <li>@Html.ActionLink("Panier", "Panier", "Commandes", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</li>
                                @if (int.Parse(Session["id"].ToString()) != 1)
                                {
                <li>@Html.ActionLink("Contact", "Contact", "Home", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</li>}
                                <li>@Html.ActionLink("Commandes", "index", "Commandes", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</li>
                                @if (Session["id"] != null && int.Parse(Session["id"].ToString()) == 1)
                                {
                <li>@Html.ActionLink("Clients", "Index", "Clients", new { area = "" }, new { @class = "nav-link font-weight-bold" })</li>}
                                <li class="dropdown font-weight-bold ml-3">
                                    <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                        Bienvenue @Session["Firstanme"]
                                    </a>
                                    <div class="dropdown-menu bg-success font-weight-bold" aria-labelledby="navbarDropdown">
                                        <a>@Html.ActionLink("Déconexion", "Logout", "Clients", new { area = "" }, new { @class = "nav-link font-weight-bold ml-3" })</a>
                                        <a>@Html.ActionLink("Edit your compte", "Edit", "Clients", new { id=Session["id"] }, new { @class = "nav-link font-weight-bold ml-3" })</a>
                                    </div>
                                </li>
                            </ul>
                        </div>
                    </nav>
                </div>}

    <div class="container-fluid body-content">
        @RenderBody()
        <footer>
            <h3><b>Here are the federations that we sponsor</b></h3></br>
            <a href="https://www.ffbjudo.be/"><img src="~/Images/ffbj.jpg" alt="ffbj" width="130px" /></a>
            <a href="https://www.vjf.be/"><img src="~/Images/vjf.png" alt="vjf" width="130px" /></a>
            <a href="https://www.ffjudo.com/"><img src="~/Images/ffjudo.jpg" alt="ffjudo" width="130px" /></a>
            <a href="https://www.ijf.org/"><img src="~/Images/ijf.png" alt="ijf" width="130px" /></a>
            <h3><b>The brands available on our site </b></h3></br>
            <a href="https://www.adidas.be/nl"><img src="~/Images/addidas.jpg" alt="adidas" width="130px" /></a>
            <a href="https://www.asics.com/be/fr-be/"><img src="~/Images/assics.jpg" alt="asics" width="130px" /></a>
            <a href="https://www.brooksrunning.com/fr_fr"><img src="~/Images/brooks.png" alt="brooks" width="130px" /></a>
            <a href="https://emea.mizuno.com/eu/fr-be/home/"><img src="~/Images/mizuno.jpg" alt="mizuno" width="130px" /></a>
            <a href="https://www.nike.com/be/fr/"><img src="~/Images/nike.png" alt="nike" width="130px" /></a>
        </footer>
        <footer class="text-center">
            <p>
                Copyright 2021 &copy; Godgui10
            </p>
        </footer>
    </div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>